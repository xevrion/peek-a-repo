{
  "manifest_version": 3,
  "name": "Peek-a-Repo",
  "version": "1.0.0",
  "description": "Preview GitHub files on hover",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://github.com/*",
    "https://raw.githubusercontent.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["tailwind.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf-viewer.html",
        "pdf-viewer.js",
        "lib/pdf.min.js",
        "lib/pdf.worker.min.js"
      ],
      "matches": ["https://github.com/*"]
    }
  ]
}